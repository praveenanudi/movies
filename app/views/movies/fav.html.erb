<h1>Favourite movies</h1> <%= link_to "Back",movies_index_path %>

<div>
	
	<table id="fav" class="table table-striped table-bordered" style="width:100%">
 	<thead>
	  	<tr> 
		  <th>Title</th>
		  <th>Year</th>
		  <th>IMDBID</th>
		  <th>Type</th>
		  <th>post</th>
		  <th>Action</th>
		
	   </tr>
    </thead> 

    
    </table>

</div>


<script type="text/javascript">
$(document).ready(function() {
	var favorites = JSON.parse(localStorage.getItem('favorites')) || [];

	var fil = favorites.reduce((unique,item) => {
		return unique.includes(item) ? unique : [...unique,item] },[]);
	

// add class 'fav' to each favorite
fil.forEach(function(favorite)
	{ 
		
	 $('#fav').append($('<tr>')
    .append($('<td>').append(favorite[1]))
    .append($('<td>').append(favorite[2]))
    .append($('<td>').append(favorite[3]))
    .append($('<td>').append(favorite[4]))
    .append($('<td>').append(favorite[5]))
    .append($('<td>').append(favorite[6]))
      )
		console.log(favorite);
		 });  
});
</script>

